{% set slides = [] | merge(_widget.product.images | default([])) %}

{% embed molecule('simple-carousel') with {
    data: {
        slides: slides
    }
} only %}
    {% block slide %}
        <div class="text-center">
            {% include atom('thumbnail') with {
                modifiers: ['bigger'],
                attributes: {
                    itemprop: 'image',
                    src: slide.externalUrlLarge
                }
            } only %}
        </div>
    {% endblock %}
{% endembed %}
